<html>
  <head>
    <title>Tasks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/assets/css/style.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
      <div class="container">
        <a href="/" class="btn btn-outline-danger me-2">
          <i class="fas fa-arrow-left"></i>
        </a>
        <a class="navbar-brand" href="/">Task Collections</a>
        <div class="ms-auto">
          {{#if user}}
            <span class="me-2">Welcome, {{user.username}}</span>
            <form action="/logout" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-outline-danger">
                <i class="fas fa-sign-out-alt"></i>
              </button>
            </form>
          {{else}}
            <a href="/login" class="btn btn-outline-primary me-2">Login</a>
            <a href="/register" class="btn btn-outline-primary me-2">Register</a>
          {{/if}}
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h2 class="mb-4 text-center">Task for Collection: {{collectionName}}</h2>

      {{#if success_msg}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          {{success_msg}}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          {{error_msg}}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {{/if}}

      <form action="/{{collectionId}}/task" method="POST" class="mb-4">
        <div class="input-group">
          <input type="text" class="form-control" name="name" placeholder="New Task Name" required />
          <button class="btn btn-primary" type="submit">Add Task</button>
        </div>
      </form>

      <div class="mb-4">
        <form action="/task/update" method="POST" id="update-task-form">
          <input type="hidden" name="collectionId" value="{{collectionId}}" />
          
          <div class="mb-4">
            <h4>Tasks - {{incompleteTasksCount}}</h4>
            <div class="list-group">
              {{#each tasks}}
                {{#if (eq is_done false)}}
                  <div class="list-group-item d-flex justify-content-between align-items-center">
                    <label for="task-{{id}}" class="form-label mb-0">{{name}}</label>
                    <div>
                      <input class="form-check-input" type="checkbox" id="task-{{id}}" name="tasks[]" value="{{id}}" />
                    </div>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>

          <div>
            <h4>Completed - {{completedTasksCount}}</h4>
            <div class="list-group">
              {{#each tasks}}
                {{#if (eq is_done true)}}
                  <div class="list-group-item d-flex justify-content-between align-items-center">
                    <label for="task-{{id}}" class="form-label mb-0" style="text-decoration: line-through;">{{name}}</label>
                    <div>
                      <input class="form-check-input" type="checkbox" id="task-{{id}}" name="tasks[]" value="{{id}}" {{#if is_done}}checked{{/if}} />
                    </div>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>

          <button type="submit" class="btn btn-primary mt-4 float-end" form="update-task-form">Update Status</button>
        </form>
      </div>

      <div class="mt-4 mb-4">
        <div class="list-group">
          <h4 class="mb-2 mt-4">Delete Task Here:</h4>
          {{#each tasks}}
            <div class="list-group-item d-flex justify-content-between align-items-center" style="width: 300px;">
              <label for="task-{{id}}" class="form-label mb-0">{{name}}</label>
              <div>
                <form action="/task/delete/{{id}}" method="POST" id="delete-form-{{id}}" style="display:inline;" onsubmit="return confirm('Apakah Anda yakin ingin menghapus tugas ini?');">
                  <button type="submit" class="btn btn-danger btn-sm" style="margin-left: 5px;">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>